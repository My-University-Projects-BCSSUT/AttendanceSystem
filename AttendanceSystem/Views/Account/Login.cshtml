@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Login to Attendance System</h2>
                
                <form asp-controller="Account" asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" required />
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="Password">Password</label>
                        <input type="password" class="form-control" id="Password" name="Password" required />
                    </div>
                    
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe" />
                        <label class="form-check-label" for="RememberMe">Remember me</label>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
                
                <hr class="my-4" />
                
                <div class="text-center">
                    <p class="mb-2">Or login with:</p>
                    <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                        <input type="hidden" name="provider" value="Google" />
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="fab fa-google"></i> Sign in with Google
                        </button>
                    </form>
                </div>
                
                <div class="text-center mt-3">
                    <small class="text-muted">
                        Default Admin: admin@attendance.com / Admin@123
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
