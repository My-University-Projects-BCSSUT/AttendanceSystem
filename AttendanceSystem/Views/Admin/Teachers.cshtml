@model IEnumerable<AttendanceSystem.Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage Teachers";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2>Manage Teachers</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="CreateTeacher" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create Teacher
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Created</th>
                    <th>Classes</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model)
                {
                    <tr>
                        <td>
                            <i class="fas fa-chalkboard-teacher"></i>
                            <strong>@teacher.FirstName @teacher.LastName</strong>
                        </td>
                        <td>@teacher.Email</td>
                        <td>@teacher.CreatedAt.ToString("MMM dd, yyyy")</td>
                        <td>
                            @{
                                var classCount = ViewBag.TeacherClassCounts != null && 
                                    ((Dictionary<string, int>)ViewBag.TeacherClassCounts).ContainsKey(teacher.Id) 
                                    ? ((Dictionary<string, int>)ViewBag.TeacherClassCounts)[teacher.Id] 
                                    : 0;
                            }
                            <span class="badge bg-info">@classCount Classes</span>
                        </td>
                        <td>
                            <form asp-action="DeleteTeacher" asp-route-id="@teacher.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('Are you sure you want to delete this teacher?')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No teachers found. Create your first teacher account to get started.
    </div>
}
