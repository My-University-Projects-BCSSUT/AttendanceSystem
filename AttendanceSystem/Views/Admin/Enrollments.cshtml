@model IEnumerable<AttendanceSystem.Models.ClassEnrollment>

@{
    ViewData["Title"] = "Manage Enrollments";
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2>Class Enrollments</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="CreateEnrollment" class="btn btn-primary">
            <i class="fas fa-plus"></i> Enroll Student
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Student</th>
                    <th>Course</th>
                    <th>Class</th>
                    <th>Enrolled Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model)
                {
                    <tr>
                        <td>
                            <i class="fas fa-user-graduate"></i>
                            <strong>@enrollment.Student.GetFullName()</strong>
                            <br>
                            <small class="text-muted">@enrollment.Student.Email</small>
                        </td>
                        <td>
                            <span class="badge bg-info">@enrollment.Class.Course.Code</span>
                            <br>
                            @enrollment.Class.Course.Name
                        </td>
                        <td>
                            @enrollment.Class.Name
                            <br>
                            <small class="text-muted">@enrollment.Class.GetScheduleInfo()</small>
                        </td>
                        <td>@enrollment.EnrolledAt.ToString("MMM dd, yyyy")</td>
                        <td>
                            <form asp-action="DeleteEnrollment" asp-route-id="@enrollment.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('Are you sure you want to remove this enrollment?')">
                                    <i class="fas fa-trash"></i> Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No enrollments found. Start by enrolling students in classes.
    </div>
}
