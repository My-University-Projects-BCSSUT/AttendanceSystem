@model IEnumerable<AttendanceSystem.Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage Students";
    var enrollmentCounts = ViewBag.EnrollmentCounts as Dictionary<string, int> ?? new Dictionary<string, int>();
}

<div class="row mb-4">
    <div class="col-md-6">
        <h2>Manage Students</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="ImportStudents" class="btn btn-success me-2">
            <i class="fas fa-file-excel"></i> Import from Excel
        </a>
        <a asp-action="CreateStudent" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Add Student
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Enrolled Classes</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    var enrollmentCount = enrollmentCounts.ContainsKey(student.Id) ? enrollmentCounts[student.Id] : 0;
                    <tr>
                        <td>@student.GetFullName()</td>
                        <td>@student.Email</td>
                        <td>
                            <span class="badge bg-info">@enrollmentCount classes</span>
                        </td>
                        <td>@student.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                        <td>
                            <form asp-action="DeleteStudent" asp-route-id="@student.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger"
                                        onclick="return confirm('Are you sure you want to delete this student?')">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No students found. Import students from Excel or create manually.
    </div>
}
