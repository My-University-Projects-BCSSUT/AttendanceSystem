@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2>Admin Dashboard</h2>
        <p class="text-muted">Manage your attendance system</p>
    </div>
</div>

<div class="row g-4">
    <!-- Semesters Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-calendar-alt fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Semesters</h5>
                <p class="card-text">Manage academic semesters</p>
                <a asp-action="Semesters" class="btn btn-primary">Manage</a>
            </div>
        </div>
    </div>

    <!-- Courses Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-book fa-3x text-success mb-3"></i>
                <h5 class="card-title">Courses</h5>
                <p class="card-text">Create and manage courses</p>
                <a asp-action="Courses" class="btn btn-success">Manage</a>
            </div>
        </div>
    </div>

    <!-- Classes Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-chalkboard-teacher fa-3x text-info mb-3"></i>
                <h5 class="card-title">Classes</h5>
                <p class="card-text">Manage class schedules</p>
                <a asp-action="Classes" class="btn btn-info">Manage</a>
            </div>
        </div>
    </div>

    <!-- Students Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Students</h5>
                <p class="card-text">Manage student accounts</p>
                <a asp-action="Students" class="btn btn-warning">Manage</a>
            </div>
        </div>
    </div>

    <!-- Teachers Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-user-tie fa-3x text-secondary mb-3"></i>
                <h5 class="card-title">Teachers</h5>
                <p class="card-text">Manage teacher accounts</p>
                <a asp-action="Teachers" class="btn btn-secondary">Manage</a>
            </div>
        </div>
    </div>

    <!-- Import Students Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-file-excel fa-3x text-success mb-3"></i>
                <h5 class="card-title">Import Students</h5>
                <p class="card-text">Bulk import from Excel</p>
                <a asp-action="ImportStudents" class="btn btn-success">Import</a>
            </div>
        </div>
    </div>

    <!-- Enrollments Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-user-check fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Enrollments</h5>
                <p class="card-text">Manage class enrollments</p>
                <a asp-action="Enrollments" class="btn btn-primary">Manage</a>
            </div>
        </div>
    </div>

    <!-- Reports Card -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-chart-bar fa-3x text-danger mb-3"></i>
                <h5 class="card-title">Reports</h5>
                <p class="card-text">View attendance reports</p>
                <a asp-action="Reports" class="btn btn-danger">View</a>
            </div>
        </div>
    </div>
</div>
