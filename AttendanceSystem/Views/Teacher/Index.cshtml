@{
    ViewData["Title"] = "Teacher Dashboard";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2>Teacher Dashboard</h2>
        <p class="text-muted">Welcome, @User.Identity?.Name</p>
    </div>
</div>

<div class="row g-4">
    <!-- My Classes Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-chalkboard fa-3x text-primary mb-3"></i>
                <h5 class="card-title">My Classes</h5>
                <p class="card-text">View and manage your assigned classes</p>
                <a asp-action="MyClasses" class="btn btn-primary">View Classes</a>
            </div>
        </div>
    </div>

    <!-- Attendance Sessions Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-qrcode fa-3x text-success mb-3"></i>
                <h5 class="card-title">Start Attendance</h5>
                <p class="card-text">Generate QR code for attendance</p>
                <a asp-action="MyClasses" class="btn btn-success">Select Class</a>
            </div>
        </div>
    </div>

    <!-- Reports Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                <h5 class="card-title">Attendance Reports</h5>
                <p class="card-text">View detailed attendance reports</p>
                <a asp-action="Reports" class="btn btn-info">View Reports</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-clock"></i> Today's Classes</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Classes scheduled for @DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Select "My Classes" to view your class schedule.
                </div>
            </div>
        </div>
    </div>
</div>
