@{
    ViewData["Title"] = "Student Portal";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2>Student Portal</h2>
        <p class="text-muted">Welcome, @User.Identity?.Name</p>
    </div>
</div>

<div class="row g-4">
    <!-- Scan QR Code Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm border-primary">
            <div class="card-body text-center">
                <i class="fas fa-qrcode fa-5x text-primary mb-3"></i>
                <h5 class="card-title">Mark Attendance</h5>
                <p class="card-text">Scan QR code to submit your attendance</p>
                <a asp-action="ScanQR" class="btn btn-primary btn-lg">
                    <i class="fas fa-camera"></i> Scan QR Code
                </a>
            </div>
        </div>
    </div>

    <!-- My Attendance Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-history fa-5x text-info mb-3"></i>
                <h5 class="card-title">My Attendance</h5>
                <p class="card-text">View your attendance history</p>
                <a asp-action="MyAttendance" class="btn btn-info btn-lg">
                    <i class="fas fa-list"></i> View History
                </a>
            </div>
        </div>
    </div>

    <!-- My Classes Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-body text-center">
                <i class="fas fa-book fa-5x text-success mb-3"></i>
                <h5 class="card-title">My Classes</h5>
                <p class="card-text">View your enrolled classes</p>
                <a asp-action="MyClasses" class="btn btn-success btn-lg">
                    <i class="fas fa-chalkboard"></i> View Classes
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle"></i> How to Submit Attendance</h5>
            </div>
            <div class="card-body">
                <ol class="mb-0">
                    <li class="mb-2">Wait for your teacher to display the QR code at the start of class</li>
                    <li class="mb-2">Click on "Scan QR Code" or use your phone's camera</li>
                    <li class="mb-2">Scan the QR code displayed by your teacher</li>
                    <li class="mb-2">Your attendance will be automatically recorded</li>
                    <li>You'll receive a confirmation message</li>
                </ol>
                <div class="alert alert-warning mt-3">
                    <i class="fas fa-exclamation-triangle"></i> 
                    <strong>Note:</strong> QR codes expire after 15 minutes. Make sure to scan within the valid time period.
                </div>
            </div>
        </div>
    </div>
</div>
