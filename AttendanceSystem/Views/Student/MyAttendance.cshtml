@model IEnumerable<AttendanceSystem.Models.Attendance>

@{
    ViewData["Title"] = "My Attendance";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2>My Attendance History</h2>
        <p class="text-muted">View all your attendance records</p>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Date</th>
                    <th>Course</th>
                    <th>Class</th>
                    <th>Check-in Time</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var attendance in Model)
                {
                    <tr>
                        <td>@attendance.AttendanceSession.SessionDate.ToString("MMM dd, yyyy")</td>
                        <td>@attendance.AttendanceSession.Class.Course.GetFullCourseName()</td>
                        <td>@attendance.AttendanceSession.Class.Name</td>
                        <td>
                            @if (attendance.CheckInTime.HasValue)
                            {
                                @attendance.CheckInTime.Value.ToString("hh:mm tt")
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>
                            @switch (attendance.Status)
                            {
                                case AttendanceSystem.Models.AttendanceStatus.Present:
                                    <span class="badge bg-success">Present</span>
                                    break;
                                case AttendanceSystem.Models.AttendanceStatus.Late:
                                    <span class="badge bg-warning">Late</span>
                                    break;
                                case AttendanceSystem.Models.AttendanceStatus.Absent:
                                    <span class="badge bg-danger">Absent</span>
                                    break;
                                case AttendanceSystem.Models.AttendanceStatus.Excused:
                                    <span class="badge bg-info">Excused</span>
                                    break;
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
    <div class="mt-3">
        <div class="row">
            <div class="col-md-3">
                <div class="card text-center border-success">
                    <div class="card-body">
                        <h5 class="text-success">@Model.Count(a => a.Status == AttendanceSystem.Models.AttendanceStatus.Present)</h5>
                        <p class="mb-0">Present</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-warning">
                    <div class="card-body">
                        <h5 class="text-warning">@Model.Count(a => a.Status == AttendanceSystem.Models.AttendanceStatus.Late)</h5>
                        <p class="mb-0">Late</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-danger">
                    <div class="card-body">
                        <h5 class="text-danger">@Model.Count(a => a.Status == AttendanceSystem.Models.AttendanceStatus.Absent)</h5>
                        <p class="mb-0">Absent</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-primary">
                    <div class="card-body">
                        <h5 class="text-primary">@Model.Count()</h5>
                        <p class="mb-0">Total</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No attendance records found. Scan QR codes during class to record your attendance.
    </div>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>
