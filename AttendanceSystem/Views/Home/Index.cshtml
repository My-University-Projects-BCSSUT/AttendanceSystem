@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-3 fw-bold mb-3">Attendance Management System</h1>
    <p class="lead">Modern, Efficient, and Secure Attendance Tracking</p>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-primary">
            <div class="card-body text-center">
                <i class="fas fa-user-shield fa-4x text-primary mb-3"></i>
                <h3>Admin</h3>
                <p class="card-text">Manage semesters, courses, classes, and users</p>
                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                {
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Go to Dashboard</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">Login as Admin</a>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-success">
            <div class="card-body text-center">
                <i class="fas fa-chalkboard-teacher fa-4x text-success mb-3"></i>
                <h3>Teacher</h3>
                <p class="card-text">Generate QR codes and track student attendance</p>
                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Teacher"))
                {
                    <a asp-controller="Teacher" asp-action="Index" class="btn btn-success">Go to Dashboard</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success">Login as Teacher</a>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-info">
            <div class="card-body text-center">
                <i class="fas fa-user-graduate fa-4x text-info mb-3"></i>
                <h3>Student</h3>
                <p class="card-text">Scan QR codes to submit your attendance</p>
                @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Student"))
                {
                    <a asp-controller="Student" asp-action="Index" class="btn btn-info">Go to Dashboard</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-info">Login with Google</a>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">
                    <i class="fas fa-star"></i> Key Features
                </h3>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="fas fa-qrcode fa-2x text-primary me-3"></i>
                            <div>
                                <h5>QR Code Technology</h5>
                                <p class="text-muted">Quick and contactless attendance marking</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="fas fa-clock fa-2x text-success me-3"></i>
                            <div>
                                <h5>Real-time Tracking</h5>
                                <p class="text-muted">Monitor attendance as it happens</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="fas fa-shield-alt fa-2x text-warning me-3"></i>
                            <div>
                                <h5>Secure Authentication</h5>
                                <p class="text-muted">Role-based access with Google OAuth</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="fas fa-chart-line fa-2x text-info me-3"></i>
                            <div>
                                <h5>Detailed Reports</h5>
                                <p class="text-muted">Comprehensive attendance analytics</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
